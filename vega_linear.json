{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "data": [
    {
      "name": "table",
      "values": "<DVC_METRIC_DATA>"
    }
  ],
  "title": "<DVC_METRIC_TITLE>",
  "width": 300,
  "height": 300,
  "scales": [
    {
      "name": "<DVC_METRIC_X_LABEL>",
      "type": "point",
      "range": "width",
      "domain": {"data": "table", "field": "<DVC_METRIC_X>"}
    },
    {
      "name": "<DVC_METRIC_Y_LABEL>",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table", "field": "<DVC_METRIC_Y>"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "rev"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "<DVC_METRIC_X_LABEL>"},
    {"orient": "left", "scale": "<DVC_METRIC_Y_LABEL>"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "rev"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "<DVC_METRIC_X_LABEL>", "field": "<DVC_METRIC_X>"},
              "y": {"scale": "<DVC_METRIC_Y_LABEL>", "field": "<DVC_METRIC_Y>"},
              "stroke": {"scale": "color", "field": "rev"},
              "strokeWidth": {"value": 2}
            }
          }
        }
      ]
    }
  ]
}
